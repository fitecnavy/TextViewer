{
  "name": "text-viewer",
  "version": "1.0.0",
  "description": "A cross-platform text file viewer application",
  "main": "src/electron-main.js",
  "scripts": {
    "start": "live-server src --port=3000",
    "dev": "live-server src --port=3000 --open",
    "build": "npm run build-css",
    "build-css": "tailwindcss -i src/styles.css -o src/dist/styles.css --watch",
    "build-android": "cap build android",
    "build-windows": "electron-builder --win --x64 --publish never",
    "build-all": "npm run build-css-prod && npm run build-windows && npm run build-android",
    "build-css-prod": "tailwindcss -i src/styles.css -o src/dist/styles.css --minify",
    "electron-dev": "electron .",
    "sync-android": "cap sync android",
    "open-android": "cap open android",
    "test": "jest",
    "lint": "eslint src/",
    "cap-init": "cap init",
    "cap-add-android": "cap add android"
  },
  "keywords": [
    "text-viewer",
    "capacitor",
    "pwa",
    "cross-platform",
    "file-reader"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "dependencies": {
    "@capacitor/core": "^5.0.0",
    "@capacitor/android": "^5.0.0",
    "@capacitor/filesystem": "^5.0.0",
    "@capacitor/dialog": "^5.0.0",
    "@capacitor/share": "^5.0.0",
    "jschardet": "^3.0.0",
    "text-encoding": "^0.7.0",
    "googleapis": "^126.0.0"
  },
  "build": {
    "appId": "com.textviewer.app",
    "productName": "TextViewer",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/**/*",
      "!src/android/**/*",
      "!src/ios/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "TextViewer-${version}-portable.exe"
    }
  },
  "capacitor": {
    "appId": "com.textviewer.app",
    "appName": "TextViewer",
    "webDir": "src",
    "bundledWebRuntime": false
  }
}